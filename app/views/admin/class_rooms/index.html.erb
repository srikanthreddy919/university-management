<div class="d-flex">
  <h1>Class Rooms</h1>
  <div class="ml-auto">
    <%= link_to 'New Class Room', new_admin_class_room_path, class: 'btn btn-primary' %>
  </div>
</div>
<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @class_rooms.each do |class_room| %>
      <tr>
        <td><%= class_room.name %></td>
        <td width="80"><%= link_to 'Show', admin_class_room_path(class_room) %></td>
        <td width="80"><%= link_to 'Edit', edit_admin_class_room_path(class_room) %></td>
        <td width="80"><%= link_to 'Destroy', admin_class_room_path(class_room), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
