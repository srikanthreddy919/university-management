<div class="d-flex mb-3">
  <h4 class="card-title"><%= @course.title %></h4>
  <div class="ml-auto">
    <%= link_to 'Edit', edit_teacher_course_path(@course), class: 'btn btn-primary mr-2' %>
    <%= link_to 'Back', teacher_courses_path, class: 'btn btn-outline-primary' %>
  </div>
</div>
<p>
  <strong>Title:</strong>
  <%= @course.title %>
</p>
<p>
  <strong>Description:</strong>
  <%= @course.description %>
</p>
<p>
  <strong>Start Time:</strong>
  <%= @course.start_time.strftime("%I:%M %p") %>
</p>
<p>
  <strong>End Time:</strong>
  <%= @course.end_time.strftime("%I:%M %p") %>
</p>
<p>
  <strong>Notes:</strong>
  <%= @course.notes %>
</p>
<h4>Course enrolled Students</h4>
<table class="table">
  <thead>
    <tr>
      <th>Student Name</th>
      <th>Email</th>
    </tr>
  </thead>
  <% if @students.present? %>
    <tbody>
      <% @students.each do |student| %>
        <tr>
          <td><%= student.first_name + " " + student.last_name %></td>
          <td><%= student.email %></td>
        </tr>
      <% end %>
    </tbody>
  <% end %>
</table>
